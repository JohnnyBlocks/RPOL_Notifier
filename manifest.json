{
    "manifest_version": 2,

    "name": "RPOL Notifier",
    "description": "Notifies you of your RPOL RSS alerts",
    "version": "1.0",

    "content_security_policy": "script-src 'self' https://google.com; object-src 'self'",
    
    
    
    "permissions": [
        "storage",
        "http://rpol.net/",
        "tabs"
        
    ],
    
    "background": {
        "scripts": ["daemon.js"]
    },
    
    "options_page": "Options.html",
    
    "browser_action": {
        "default_icon":  "RPOL.png",
        "default_popup": "GameList.html"
    }
}